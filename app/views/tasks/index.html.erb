
<% @tasks.each do |task| %>
  <article>
    <h2> <%= link_to( task.title, show_path(task.id)) %> </h2>
    <h3> Description: <%= task.description %> </h3>
    <h3> Completed? <%= task.completion_status %> </h3>
    <h3> Completed at: <%= task.completed_at %> </h3>

    <p> <%= button_to "Edit Task", {action: "edit", id: task.id}, method: :get%></p>

    <p> <%= button_to "Mark Task Complete", {action: "complete", id: task.id}, method: :put, data: {confirm: "You can only timestamp this once. Are you really done?"} %></p>

    <p> <%= button_to "Delete Task", {action: "destroy", id: task.id}, method: :delete, data: {confirm: "Are you sure you want to delete this task?" }%></p>

  </article>
<% end %>
