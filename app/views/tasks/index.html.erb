
<% @tasks.each do |task| %>
  <article>
    <h2> <%= link_to( task.title, show_path(task.id)) %> </h2>
    <h3> Description: <%= task.description %> </h3>
    <%# if task.completion_status == true %>

    <h3>  <%= task.completion_status %> Completed? </h3>
    <h3> Completed at: <%= task.completed_at %> </h3>

    <%= button_to "Edit Task", {action: "edit", id: task.id}, method: :get, :class => 'btn' %>

    <%= button_to "Task Completed!", {action: "complete", id: task.id}, method: :put, data: {confirm: "You can only timestamp this once. Are you really done?"}, :class => 'btn' %>

    <%= button_to "Delete Task", {action: "destroy", id: task.id}, method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, :class => 'btn' %>

  </article>
<% end %>
